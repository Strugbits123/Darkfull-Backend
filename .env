# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL="postgresql://postgres:root@localhost:5432/dark_horse_3pl_db?schema=public"

# Environment
NODE_ENV=development
APP_NAME=Dark Horse 3PL Platform
APP_VERSION=1.0.0

# API Gateway Configuration
GATEWAY_PORT=8080
GATEWAY_BASE_URL=http://localhost:8080

# Auth Service Configuration
AUTH_SERVICE_PORT=6001
AUTH_SERVICE_BASE_URL=http://localhost:6001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-very-long-and-random
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-very-long-and-random
JWT_ACCESS_EXPIRY=50m
JWT_REFRESH_EXPIRY=7d

# Cookie Configuration
COOKIE_SECRET=your-super-secret-cookie-key-change-this-in-production

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@darkhorse3pl.com
FROM_NAME=Dark Horse 3PL Platform

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Settings
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
ENABLE_SWAGGER=true
MAX_JSON_SIZE=10mb

# CORS Settings (comma-separated URLs for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Service URLs (for when other services are added)
ORDER_SERVICE_URL=http://localhost:6002
INVENTORY_SERVICE_URL=http://localhost:6003
WAREHOUSE_SERVICE_URL=http://localhost:6004
NOTIFICATION_SERVICE_URL=http://localhost:6005