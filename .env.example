# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/dark_horse_3pl_db?schema=public"

# Environment
NODE_ENV=development
APP_NAME=Dark Horse 3PL Platform
APP_VERSION=1.0.0

# API Gateway Configuration
GATEWAY_PORT=8080
GATEWAY_BASE_URL=http://localhost:8080

# Auth Service Configuration
AUTH_SERVICE_PORT=6001
AUTH_SERVICE_BASE_URL=http://localhost:6001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Cookie Configuration
COOKIE_SECRET=your-super-secret-cookie-key-change-this-in-production

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@darkhorse3pl.com
FROM_NAME=Dark Horse 3PL Platform

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Settings
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
ENABLE_SWAGGER=true
MAX_JSON_SIZE=10mb

# Salla Integration
SALLA_CLIENT_ID=your-salla-client-id
SALLA_CLIENT_SECRET=your-salla-client-secret
SALLA_WEBHOOK_SECRET=your-salla-webhook-secret
SALLA_REDIRECT_URI=http://localhost:8080/auth/salla/callback

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=dark-horse-3pl-assets

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Service URLs
ORDER_SERVICE_URL=http://localhost:6002
INVENTORY_SERVICE_URL=http://localhost:6003
WAREHOUSE_SERVICE_URL=http://localhost:6004
NOTIFICATION_SERVICE_URL=http://localhost:6005